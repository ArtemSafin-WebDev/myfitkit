{{#extend "layout"}}
{{#content "main"}}


<div class="breadcrumbs">
    <div class="container">
        <div class="breadcrumbs__content">
            <ul class="breadcrumbs__list">
                <li class="breadcrumbs__list-item">
                    <a href="#" class="breadcrumbs__link">
                        <svg width="16" height="16" aria-hidden="true" class="icon-arrow-right">
                            <use xlink:href="#arrow-right"></use>
                        </svg>
                        Главная
                    </a>


                    <a class="breadcrumbs__link active">
                        <svg width="16" height="16" aria-hidden="true" class="icon-arrow-right">
                            <use xlink:href="#arrow-right"></use>
                        </svg>
                        Вход в кабинет
                    </a>
                </li>
            </ul>
            <h1 class="main-heading">
                Вход в кабинет
            </h1>
        </div>
    </div>
</div>


<section class="login">
    <div class="container">
        <form action="/" method="POST" class="login__form" data-need-validation>
            <div class="login__form-row">
                <label for="email" class="text-input-label login__form-label">
                    E-mail *
                </label>
                <input type="email" class="text-input login__form-input" name="email" id="email" required>
            </div>
            <div class="login__form-row">
                <label for="password" class="text-input-label login__form-label">
                    Пароль *
                </label>
                <input type="password" class="text-input login__form-input" id="password" name="password" required>
            </div>
            <div class="login__buttons">
                <a href="#" class="login__remember-password-link">
                    Забыли пароль?
                </a>
                <button class="btn login__submit">
                    Войти
                </button>
            </div>
            <div class="login__not-registered">
                <p>
                    Не зарегистрированы? <a href="#">
                        Регистрация
                    </a>
                </p>
            </div>
        </form>
    </div>
</section>

{{/content}}
{{/extend}}